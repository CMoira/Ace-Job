@page
@model AppSec_Assignment_2.Pages.LoginModel
@{
}
<head>
	<!--  <script src="https://www.google.com/recaptcha/api.js?render=@ViewData["SiteKey"]"></script> -->
</head>

<div class="container mt-5">

	<div class="row justify-content-center align-items-center">

		<div class="col-sm-12 col-md-12 col-lg-4">
			<h1 class="mb-3">Login </h1>

			<form method="post">
				@Html.AntiForgeryToken()

				<div class="mb-3">
					<label class="form-label" asp-for="LModel.EmailAddress">Email Address</label>
					<input type="Text" asp-for="LModel.EmailAddress" class="form-control" />
					<span asp-validaton-for="LModel.Email" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label class="form-label" asp-for="LModel.Password">Password</label>
					<input type="password" asp-for="LModel.Password" class="form-control" />
					<span asp-validaton-for="LModel.Password" class="text-danger"></span>
				</div>

				<div class="mb-3 form-check">
					<input type="checkbox" asp-for="LModel.RememberMe" class="form-check-input" />
					<label class="form-check-label" asp-for="LModel.RememberMe">Remember Me?</label>
				</div>

				<!-- <input type="hidden" id="g-recaptcha-response" name="g-recaptcha-response" /> -->

				<div class="mb-3">
					<button type="submit" class="btn btn-primary">Login</button>
				</div>
			</form>
		</div>
		<div asp-validation-summary="All" class="text-danger"></div>

		@if (TempData["EmailSentMessage"] != null)
		{
			<div class="alert alert-info">
				@TempData["EmailSentMessage"]
			</div>
		}

		<a class="nav-link text-dark" asp-area="" asp-page="/ResetPasswordRequest">Forgot Password? Reset Password</a>
	</div>
</div>

